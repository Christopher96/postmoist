@model Projekt.Models.User

@{
    ViewBag.Title = "Create";
}

<span class="large title">Edit user</span>
<hr />

@using (Html.BeginForm("Edit", "Users"))
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    @Html.HiddenFor(model => Model.user_id)
    @Html.HiddenFor(model => Model.password_hash)
    @Html.HiddenFor(model => Model.created)
    <span class="control-label">Username</span>
    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })<br />
    <span class="control-label">Role</span>
    @Html.DropDownList("role_id", null, htmlAttributes: new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.Role.role, "", new { @class = "text-danger" })<br />
    <input type="submit" value="Save" class="btn btn-default" />
</div>
}
